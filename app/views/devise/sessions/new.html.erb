<div class="col-sm-offset-1 text-primary">
  <h2>Please login</h2>
  <br>
</div>

<%= form_for(resource, as: resource_name, url: session_path(resource_name), :html => {:class => "form-horizontal"}) do |f| %>

  <div class="form-group">
    <%= f.label :email, :class => "col-sm-1 control-label" %>
    <div class="col-sm-8">
      <%= f.email_field :email, :class => "form-control" %>
    </div>
  </div>

  <div class="form-group">
    <%= f.label :password, :class => "col-sm-1 control-label" %>
    <div class="col-sm-8">
      <%= f.password_field :password, :class => "form-control" %>
    </div>
  </div>

  <% if devise_mapping.rememberable? -%>
  <div class="form-group">
    <div class="col-sm-offset-1 col-sm-10">
      <div class="checkbox">
        <%= f.check_box :remember_me, :style => "margin-left: 0px" %>
        <%= f.label :remember_me %>
      </div>
    </div>
  </div>
  <% end %>

  <div class="form-group">
    <div class="col-sm-offset-1 col-sm-10">
      <%= f.submit "Log in", :class => "btn btn-default" %>
    </div>
  </div>
<% end %>

<div class="col-sm-offset-1 col-sm-10">
  <%= render "devise/shared/links" %>
</div>
