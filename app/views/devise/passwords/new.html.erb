<div class="col-sm-offset-1 text-primary">
  <h2>Forgot your password?</h2>
  <br>
</div>

<%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { :class => "form-horizontal", method: :post }) do |f| %>
  <%= devise_error_messages! %>

  <div class="form-group">
    <%= f.label :email, :class => "col-sm-1 control-label" %>
    <div class="col-sm-8">
      <%= f.email_field :email, :class => "form-control" %>
    </div>
  </div>

  <div class="form-group">
    <div class="col-sm-offset-1 col-sm-10">
      <%= f.submit "Send me password instructions", :class => "btn btn-default" %>
    </div>
  </div>

<% end %>


<div class="col-sm-offset-1 col-sm-10">
  <%= render "devise/shared/links" %>
</div>
