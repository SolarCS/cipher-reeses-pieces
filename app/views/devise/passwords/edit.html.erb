<div class="col-sm-offset-1 text-primary">
  <h2>Change your password</h2>
  <br>
</div>

<%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { :class => "form-horizontal", method: :put }) do |f| %>
  <%= devise_error_messages! %>
  <%= f.hidden_field :reset_password_token %>

  <div class="form-group">
    <%= f.label :password, :class => "col-sm-1 control-label" %>
    <div class="col-sm-8">
      <% if @validatable %>
      <em>(<%= @minimum_password_length %> characters minimum)</em>
      <% end %>
      <%= f.password_field :password, autocomplete: "off", :class => "form-control"  %>
    </div>
  </div>

  <div class="form-group">
    <%= f.label :password_confirmation, :class => "col-sm-1 control-label" %>
    <div class="col-sm-8">
    <%= f.password_field :password_confirmation, autocomplete: "off", :class => "form-control" %>
    </div>
  </div>

  <div class="form-group">
    <div class="col-sm-offset-1 col-sm-10">
      <%= f.submit "Change my password", :class => "btn btn-default" %>
    </div>
  </div>
<% end %>

<div class="col-sm-offset-1 col-sm-10">
  <%= render "devise/shared/links" %>
</div>
